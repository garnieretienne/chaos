#!/bin/bash
set -e

# Build a gateway executing servicepacks binaries over ssh
gateway=$(cat << EOF
  command=\$@
  ssh -oStrictHostKeyChecking=no -n addons@<%= provider %> servicepacks/<%= name %>/bin/\${command}
EOF
)

echo "$gateway" > $HOME/addons/<%= name %>/gateway
chmod +x $HOME/addons/<%= name %>/gateway