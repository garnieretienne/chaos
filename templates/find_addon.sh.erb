#!/bin/bash
set -e

# Search for an addon plan provider in the addons direcory
for addon_path in <%= ADDONS_DIR %>/*; do
  if [ -f ${addon_path}/detect ]; then
    detected=$(${addon_path}/detect <%= plan %>)
    if [[ $? == 0 ]]; then
      echo $(basename $addon_path)
      exit 0
    fi
  fi
done

exit 1